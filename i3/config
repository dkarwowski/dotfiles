set $system System: (p)oweroff, (l)ock, (r)eboot, (e)xit

mode "$system" {
    bindsym l           exec "gnome-screensaver-command --lock"; mode "default"
    bindsym p           exec dbus-send --system --print-reply --dest=org.freedesktop.ConsoleKit /org/freedesktop/ConsoleKit/Manager org.freedesktop.ConsoleKit.Manager.Stop; mode "default"
    bindsym r           exec dbus-send --system --print-reply --dest=org.freedesktop.ConsoleKit /org/freedesktop/ConsoleKit/Manager org.freedesktop.ConsoleKit.Manager.Restart; mode "default"
    bindsym e           exec i3-msg exit; mode "default"
    bindsym Return      mode "default"
    bindsym Escape      mode "default"
}

