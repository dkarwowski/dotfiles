digraph G {
    subgraph a {
        A -> A [label="0"];
        A -> B [label="1"];
        B -> B [label="0"];
        B -> C [label="1"];
        C -> C [label="1,0"];
        A [label="a"];
        B [label="b"];
        C [peripheries=2,label="c"];
    };
    subgraph b {
        D -> D [label="0"];
        D -> F [label="10*1"];
        F -> F [label="1,0"];
        D [label="a"];
        F [peripheries=2,label="c"];
    };
    subgraph b {
        G -> G [label="0"];
        G [peripheries=2,label="a"];
    };
}
