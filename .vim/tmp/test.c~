#include <SDL2/SDL.h>

int
main(int argc, char** argv) {
    // handle to a window we'll use
    SDL_Window *hWindow;

    // Initialization of the SDL libraries
    // Includes, Video, Audio, File I/O, Events, Threading
    SDL_Init(SDL_INIT_VIDEO);//|SDL_INIT_AUDIO);

    // Grab the window we'll be using from SDL
    hWindow = SDL_CreateWindow(
            "Test Window",
            SDL_WINDOWPOS_UNDEFINED,
            SDL_WINDOWPOS_UNDEFINED,
            500,
            500,
            SDL_WINDOW_OPENGL           // Window flags that can be set
    );

    // If we didn't get the window; get out of here
    if (hWindow == NULL) {
        printf("Couldn't create window: %s\n", SDL_GetError());
        return -1;
    }

    SDL_Event event;
    while(SDL_PollEvent(&event)) {
    }

    // Destroy the window
    SDL_DestroyWindow(hWindow);

    // Quit closes all SDL systems
    SDL_Quit();
    return 0;
}

