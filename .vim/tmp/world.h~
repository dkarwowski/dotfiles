#ifndef _WORLD_H_

#define MAP_UNINITIALIZED INT32_MAX
#define MAP_DIM 16

typedef enum {
    TM_UNWALKABLE = (1 << 0),

    TM_WTF        = (1 << 31)
} tile_flag;

typedef struct {
    u32 tiles[MAP_DIM][MAP_DIM];
} tile_map;

typedef struct world_map {
    i32 worldx, worldy;

    tile_map map;
    struct world_map *next;
} world_map;

typedef struct {
    world_map mapHash[2048];
    memory_stack stack;
} tile_world;

typedef struct {
    i32 worldx, worldy; // where in the world
    v2 map;   // where relative to bottom left of map
} world_pos;

#define _WORLD_H_
#endif
