type Env = string -> int;
exception NameNotBound of string;

(* create a new empty environment for the base *)
fun env_new () = (fn x => raise NameNotBound x) : Env;

(* bind a new environment variable that overwrites the old one *)
fun env_bind (e:Env) (s:string) (i:int) =
  (fn str => if str=s then i else (e str)) : Env;

fun env_lookup (e:Env) (s:string) = (e s);

