import re

def decode_diff(string):
    s = string.strip('"')
    s = s.replace('\\"', '"')
    s = s.replace('\\\\', '\\')
    ddiff = len(string)-len(s)
    r = re.compile(r'(\\x[a-f0-9]{2})')
    m = r.findall(s)
    if m:
        ddiff += sum([3 for i in m])
    return ddiff

def encode_diff(string):
    print list(string)
    r = re.compile(r'(\\)')
    diff += sum([1 for i in r.findall(string)])
    r = re.compile(r'(")')
    diff += sum([1 for i in r.findall(string)])
    return diff + 2

if __name__=="__main__":
    with open("day8.txt") as in_file:
        ddiff = 0
        ediff = 0
        for i in in_file:
            ddiff += decode_diff(i.strip('\n'))
            ediff += encode_diff(i.strip('\n'))
        print ddiff, ediff
