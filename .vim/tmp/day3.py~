class Santa:
    x = 0
    y = 0

    def move(this, char):
        if char is '^': this.y += 1
        if char is '>': this.x += 1
        if char is '<': this.x -= 1
        if char is 'v': this.y -= 1

        return (this.x,this.y)

if __name__=="__main__":
    visited = []
    with open("day3.txt") as in_file:
        santas = [Santa(), Santa()]
        i = 0
        visited.append((0, 0))
        moves = in_file.readline().strip('\n')
        for char in moves:
            t = santas[i].move(char)
            if t not in visited:
                visited.append(t)
            i += 1
            i %= 1

    print len(visited)
