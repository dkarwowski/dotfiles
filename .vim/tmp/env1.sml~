type Env = (string * int) list;
exception NameNotBound of string;

(* get a new clean environment *)
val env_new = []:Env;

(* bind an element to a new environment, keeping the old one *)
fun env_bind (e : Env) s i = (s,i)::e : Env;

(* check for binded elements in the environment *)
fun env_lookup ([]:Env) (t:string) = raise NameNotBound t
  | env_lookup (s,i)::e t = if s=t then i else (env_lookup e t);

