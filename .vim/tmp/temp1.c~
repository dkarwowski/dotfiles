int has_sum(int *array, int len, int k) {
    int first = 0, last = len - 1;
    while (first <= last) {
        if (array[last] > k)
            last--;
        else if (array[last] + array[first] > k)
            last--;
        else if (array[last] + array[first] < k)
            first++;
        else if (array[last] + array[first] == k)
            return 1;
    }
    return 0;
}
